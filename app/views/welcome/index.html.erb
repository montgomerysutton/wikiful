<h1>Welcome to Wikiful</h1>
<p>Here are some recent articles:</p>

<% @recent_articles.each do |article| %>
	<div>
		<h3><%= link_to article.title, article %></h3>
		<p class="text-info"><% article.categories.each do |category| %>
              <%= link_to category.name, category %>
              <% if category.id != article.categories.last.id %>
					<%= " / " %>
			  <% end %>
            <% end %>
			- Published on <%= article.created_at.strftime('%b %d, %Y') %>
		</p>
		<p><%= truncate(article.content, length:100) %></p>
	</div>
<% end %>