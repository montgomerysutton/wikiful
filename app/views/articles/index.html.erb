<% # Articles Index View: articles/index.html.erb %>

<h1>This is the Index View for Articles</h1>

<% @articles.each do |article| %>
	<div>
		<p class="text-info"><% article.categories.each do |category| %>
              <%= link_to category.name, category %>&nbsp;
              <% if category.id != article.categories.last.id %>
					<%= " / " %>
			  <% end %>
            <% end %>
		</p>
		<h3><%= link_to article.title, article %></h3>
		<p class="text-info">Published on <%= article.created_at.strftime('%b %d, %Y') %></p>
		<p><%= truncate(article.content, length:200) %></p>
	</div>
<% end %>