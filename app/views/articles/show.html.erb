<% # Articles Show View: articles/show.html.erb %>

<div class="text-info">
	<% @article.categories.each do |category| %>
		<%= link_to category.name, category %>
		<% if category.id != @article.categories.last.id %>
			&nbsp;/&nbsp;
		<% end %>
	<% end %>
</div>

<h1><%= @article.title %></h1>

<p class="text-info">Published: <%= @article.created_at.strftime('%b %d, %Y') %> |
	Last update: <%= @article.updated_at.strftime('%b %d, %Y') %>
</p>

<p><%= @article.content %></p>